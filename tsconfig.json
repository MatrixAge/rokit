{
      "compilerOptions": {
            "target": "es5",
            "lib": [
                  "dom",
                  "dom.iterable",
                  "esnext"
            ],
            "paths": {
                  "@/*": [
                        "./*"
                  ]
            },
            "allowJs": true,
            "skipLibCheck": true,
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "strict": true,
            "forceConsistentCasingInFileNames": true,
            "module": "esnext",
            "moduleResolution": "node",
            "resolveJsonModule": true,
            "isolatedModules": true,
            "noEmit": false,
            "jsx": "react",
            "baseUrl": "src"
      },
      "include": [
            "@types",
            "src",
            "src/components"
      ],
      "exclude": [
            "node_modules"
      ]
}