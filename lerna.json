{
      "packages": [
            "packages/*"
      ],
      "version": "independent",
      "npmClient": "yarn",
      "useWorkspaces": true,
      "command": {
            "publish": {
                  "ignoreChanges": [
                        "ignored-file",
                        "*.md"
                  ]
            },
            "bootstrap": {
                  "npmClientArgs": [
                        "--no-package-lock"
                  ]
            }
      }
}